
// preset form values if we receive a userdata object //
- label = ' '
- icon = userid ? '/css/ui/person_tie.png' : '/css/ui/External.png'
- userid = user
- conversationid = conversationid
- namelink = typeof(user) != 'undefined' ? ('/settings') : '/login'

doctype html
html
	head
		meta(charset='UTF-8')
		meta(name='description', content='SQL Client with charting')
		meta(name="google-site-verification" content="NOTYET")
		meta(name='conversationid',content="#{conversationid}")
		title SQL Client
		meta(name='viewport', content='width=device-width, initial-scale=1')
		script(src='socket.io/socket.io.js')
		script(src='http://www.chartjs.org/dist/2.7.2/Chart.bundle.js')
		script(src='http://www.chartjs.org/samples/latest/utils.js')
		link(rel='stylesheet', href='/css/index_style.css')
		link(rel='stylesheet', href='/css/canvas.css')
	body(style="line-height:1em; -webkit-app-region: drag;")
		img(title="User status", style='width:18px;height:18px',src="/css/ui/External.png")
		div#header-wrap(style='-webkit-app-region: drag; text-size:20')
			ul.nav(style=)
				li.nav.dropdown(style='float:left!important')
					a.dropbtn(href='javascript:void(0)', style="margin:5px 10px;")
						img.dropbtn(title="menu", style='width:18px;height:18px', onclick='doExpand()', src="/css/ui/person_tie.png")
					div#aDropDown.dropdown-content
						a(href="/about") about
				li.nav.center(style="float:center!important;padding: 8px 10px") SQL Client
				li.nav.right(style="float:right!important;padding:8px 10px")
					input#clipboard(style="visibility:hidden")
					button#btncleartop clear top
					button#btncopyhistory copy history

		div(style='margin-top:20px', data-theme='a')
		div.well
			div.panel.panel-sm.panel-warning
			ul.ui-listview(style='-webkit-app-region: no-drag', data-role='listview')
				li.abcdef

				li.request(data-icon="false")
					textarea#growme.ui-input-textX(rows='5', value='Acbdef') enter SQL Query
				li.result
					table
						tr
							td
								button#btnexec execute
							td
								button#btncontinuous(style='pressed') continuous
							td
								label parallel
								input#parallel(value=1)
								button#btndecpar -
								button#btnincpar +
				li.chart
					table
						tr
							td
								button#btnQPS(style='color: green; font-weight:bold') QPS
							td
								button#btnFAIL(style='color: red; font-weight:bold') FAIL
							td
								button#btnMEM(style='color: brown; font-weight:bold') MEM
							td
								button#btnCPU(style='color: yellow; font-weight:bold') CPU
							td
								button#btnPAR(style='color: blue; font-weight:bold') PAR
							td
								button#btnMAXMEM(style='color : orange; font-weight:bold') MAXMEM
							td
								button#btnDUR(style='color: goldenrod; font-weight:bold') DUR
							td
								button#btnNP(style='color: lightblue; font-weight:bold') NP
							td
								span(style="width:5%")
							td
								button#btnPurgeAverage(style='pressed') reduce Averaging
							td
								button#btnPurgeSample(style='pressed') reduce Purging
							td
								button#btnPurgeLeftHalf(style='pressed') remove left half


					testarea#result.ui-input-textX(rows='5')


	div(style="width:90%")
			canvas#canvas

	block scripts
		script(src='/vendor/jquery-2.2.3.min.js')
		script(src='/js/index.js')
		script(src='/js/chart1.js')
